<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    app:contentPadding="10dp"
    android:layout_height="314dp"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/cc"
    android:background="@color/cc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:src="@drawable/tsm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANS STUDIO MALL"
            android:layout_marginLeft="16dp"
            android:textColor="#464EB8"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Trans Studio Mall Bandung is a place where you can enjoy an endless shopping and entertainment in Bandung. "
            android:textSize="12dp" />

    </LinearLayout>




</androidx.cardview.widget.CardView>